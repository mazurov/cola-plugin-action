{
  "name": "cola-plugin-action",
  "version": "1.0.0",
  "description": "GitHub Action for validating, packaging, and publishing Command Launcher plugins",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern '**/*.test.ts'",
    "package": "ncc build src/main.ts -o dist --license licenses.txt",
    "test": "jest",
    "test:docs-setup": "tsx src/tests/docs-local.ts",
    "test:docs-generate": "tsx src/tests/docs-generate.ts",
    "test:docs-serve": "node scripts/serve-docs.js build/docs-local-test/docs 3000",
    "test:docs": "npm run test:docs-setup && npm run test:docs-generate && npm run test:docs-serve",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/criteo/cola-plugin-action.git"
  },
  "keywords": [
    "github-action",
    "command-launcher",
    "plugin",
    "validation",
    "packaging",
    "oci"
  ],
  "author": "Alexander @ Criteo",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@octokit/rest": "^20.0.2",
    "yaml": "^2.3.4",
    "marked": "^11.1.1",
    "semver": "^7.5.4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
